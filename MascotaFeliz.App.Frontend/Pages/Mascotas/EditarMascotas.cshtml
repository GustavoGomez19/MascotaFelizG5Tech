@page
@model MascotaFeliz.App.Frontend.pages.EditarMascotasModel
@{
    int mascotaId = Model.mascota.Id;
}
<section class="formularios">
    <h2>Agregar o editar Mascota</h2>
    <form method="post" class="formulario">
        <input  type="hidden" asp-for="mascota.Id">
        <input  class="controls" asp-for="mascota.Nombre" class="form-control" placeholder="Nombre">
        <input  class="controls" asp-for="mascota.Color" class="form-control" placeholder="Color">
        <input  class="controls" asp-for="mascota.Raza" class="form-control" placeholder="Raza">
        <input  class="controls" asp-for="mascota.Especie" class="form-control" placeholder="Especie">
        
        <div class="selectores">
            <label for="dueno">Dueño</label>
            <select id="dueno" asp-for="mascota.Dueno.Id" name = "duenoId">
                <option value="0">Seleccione un Dueño</option>
                @foreach (var dueno in Model.listaDuenos)
                {
                    <option value="@dueno.Id">@dueno.Nombres @dueno.Apellidos</option>
                }
            </select>

            <label for="veterinario">Veterinario</label>
            <select  id="veterinario" asp-for="mascota.Veterinario.Id" name = "veterinarioId">
                <option value="0">Seleccione un Veterinario</option>
                @foreach (var veterinario in Model.listaVeterinarios)
                {
                    <option value="@veterinario.Id">@veterinario.Nombres @veterinario.Apellidos</option>
                }
            </select>
        </div>
        <button id="guardar" type="submit" class="btn btn-primary">Grabar</button>
        <a id="retornar" asp-page="./ListaMascotas" class="btn-default">Lista Mascotas</a>    
        
    </div>

    
</form>
</section>

