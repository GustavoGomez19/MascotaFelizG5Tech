@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotasModel
@{
}
<body>
    <section class="formularios">
        <form class="formulario">
            <h2>Listado de Mascotas</h2>
            <div>
                <h3>Buscar</h3>
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
            <table class="table">
                <tr>
                    <td class="tittle">Nombre</td>
                    <td class="tittle">Raza</td>
                    <td class="tittle"><a >Detalles</a></td>
                    <td class="tittle"><a>Editar</a></td>
                </tr>
            @foreach (var mascota in Model.ListaMascotas)
            {
                <tr>

                    <td>@mascota.Nombre</td>
                    <td>@mascota.Raza</td>

                      
                    <td>
                        <a id="editar-detalles" class="btn btn-primary table-btn" asp-page="./DetallesMascotas" asp-route-mascotaId="@mascota.Id">
                            Detalle Mascota
                        </a>
                    </td>
                    <td>
                        <a id="editar-detalles" class="btn btn-primary table-btn" asp-page="./EditarMascotas" asp-route-mascotaId="@mascota.Id">
                            Editar Mascota
                        </a>
                    </td>

                </tr>
            }
            </table>
            <a id="agregar-mascota" class="btn btn-primary table-btn" asp-page="./EditarMascotas" class="btn-default">Agregar Mascota</a>
        </form>
    </section>
</body>